{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[Default] Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "python": "${workspaceFolder}/venv/bin/python"
    },
    {
      "name": "[Test] 01. All",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v"]
    },
    {
      "name": "[Test] 02. Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v"]
    },
    {
      "name": "[Run] 01. Transformer",
      "type": "debugpy",
      "request": "launch",
      "program": "examples/tiny_transformer.py"
    },
    {
      "name": "[Run] 02. Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}"
    },
    {
      "name": "[Visualize] Graph Viewer",
      "type": "debugpy",
      "request": "launch",
      "program": "examples/visualize_graph.py"
    },
    {
      "name": "[Server] Visualizer (port 8080)",
      "type": "debugpy",
      "request": "launch",
      "program": "examples/visualize_graph.py",
      "args": ["--model", "transformer", "--port", "8080"],
      "python": "${workspaceFolder}/venv/bin/python"
    }
  ]
}
